<Application x:Class="ArchiverSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ArchiverSystem"
             StartupUri="View/StartPage.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <!-- startPagePanel -->
            <Style x:Key="startPagePanel" TargetType="DockPanel">
                
            </Style>

            <!-- dockPanelBorder -->
            <Style x:Key="dockPanelBorder" TargetType="Border">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Background" Value="white"/>
            </Style>

            <!-- startPageTitleLabel -->
            <Style x:Key="startPageTitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="Blue"/>
            </Style>
            
            <!-- addButton -->
            <Style x:Key="addButton" TargetType="Button">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Blue"/>
                <Setter Property="BorderBrush" Value="Blue"/>
                
            </Style>

            <!-- addButtonBorder -->
            <Style x:Key="addButtonBorder" TargetType="Border">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Background" Value="Blue"/>
                <Setter Property="Padding" Value="3"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>
